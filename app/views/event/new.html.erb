<body data-turbo="false">
  <%= yield %> 

<h1>Event#new</h1>
<p>Find me in app/views/gossip/new.html.erb</p>
<% if @event.errors.any? %>
<div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer le event pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @event.title %>
    <br /> <br />
    <%= label_tag 'Description' %>
    <%= text_area_tag 'description', @event.description %>
    <br /> <br />
    <%= label_tag 'Start_date' %>
    <%= text_area_tag 'start_date', @event.start_date %>
    <br /> <br />
    <%= label_tag 'Price' %>
    <%= text_area_tag 'price', @event.price %>
    <br /> <br />
    <%= submit_tag "Create Post" %>
  <% end %>
</div>
</body>